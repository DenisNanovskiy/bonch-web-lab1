@page
@model laba1.Pages.WebResources.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Web Resources</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WebPage[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WebPage[0].URL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WebPage[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WebPage[0].Keywords)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WebPage[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WebPage[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.WebPage) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a href="@Html.DisplayFor(modelItem => item.URL)">@Html.DisplayFor(modelItem => item.URL)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Keywords)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
